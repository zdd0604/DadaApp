<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/back"
    android:orientation="vertical">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="8dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/exam_List_Back"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:background="@drawable/exambacktrue"
                    android:layout_alignBaseline="@+id/textView_djsl"
                    android:layout_alignBottom="@+id/textView_djsl"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:id="@+id/textView_djsl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="37dp"
                    android:text="更新时间:"
                    android:layout_alignTop="@+id/exam_List_UpDataTime"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:id="@+id/exam_List_UpDataTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/textView_djsl" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/textView_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="考试科目:"
                    android:textSize="25dp"
                    android:layout_below="@+id/textView_djsl"
                    android:layout_alignStart="@+id/textView_djsl" />

                <TextView
                    android:id="@+id/exam_List_KSKM"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/textView_2"
                    android:layout_alignBottom="@+id/textView_2"
                    android:layout_toEndOf="@+id/textView_2"
                    android:textSize="22dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginBottom="8dp"
                android:id="@+id/A">

                <TextView
                    android:id="@+id/textView_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="考试开始--结束时间:"
                    android:layout_below="@+id/exam_Progress_Success"
                    android:layout_alignStart="@+id/textView_2" />

                <TextView
                    android:id="@+id/exam_List_Begin_End_Time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/textView_4"
                    android:layout_alignBottom="@+id/textView_4"
                    android:layout_toEndOf="@+id/textView_4" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="考试车型："
                    android:id="@+id/textView5" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/exam_List_KSCX" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:layout_marginRight="8dp">

            <com.dadaxueche.student.dadaapp.View.RoundProgressBar
                android:id="@+id/exam_Progress_Success"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:indeterminate="false"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>