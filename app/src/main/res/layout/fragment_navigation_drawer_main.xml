<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="8dp"
    android:background="@mipmap/cehua_bg">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:id="@+id/fragment_nav_info"
        android:layout_height="86dp">

        <com.dadaxueche.student.dadaapp.View.CircleImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/fragment_nav_anuser_hand_image"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/wodech"
            android:layout_marginLeft="18dp" />


        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/fragment_nav_isLogin"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="left|center"
                android:layout_weight="1"
                android:visibility="gone"
                android:layout_marginLeft="5dp"
                android:textSize="16dp" />
            <TextView
                android:id="@+id/fragment_nav_user_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="bottom"
                android:layout_marginLeft="5dp" />

            <TextView
                android:id="@+id/fragment_nav_user_mobile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="top"
                android:layout_marginLeft="5dp" />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text=">"
            android:id="@+id/textView"
            android:gravity="center_vertical"
            android:layout_marginRight="17dp" />
    </LinearLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/nav_info_list"
        android:layout_marginTop="5dp"
        android:layout_weight="1" />
</LinearLayout>